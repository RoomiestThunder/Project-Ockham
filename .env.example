# Переменные окружения для Project Ockham

# === Общие настройки ===
APP_NAME="Project Ockham"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# === База данных ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ockham
DB_USERNAME=root
DB_PASSWORD=

# === Redis ===
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=predis

# === Очереди ===
QUEUE_CONNECTION=redis
QUEUE_DRIVER=redis

# === Broadcasting (для WebSocket) ===
BROADCAST_DRIVER=redis
# Для продакшена: pusher или soketi
# BROADCAST_DRIVER=pusher

# === Настройки расчетов Project Ockham ===

# Синхронный режим
CALC_SYNC_CACHE_TTL=3600          # TTL кэша (секунды)
CALC_SYNC_TIMEOUT=30               # Таймаут выполнения (секунды)

# Асинхронный режим
CALC_QUEUE_NAME=calculations       # Имя очереди
CALC_ASYNC_TIMEOUT=3600            # Таймаут job (секунды)
CALC_RETRY_ATTEMPTS=3              # Попытки при ошибке
CALC_RETRY_BACKOFF=60              # Задержка между retry (секунды)
CALC_MAX_ITERATIONS=10000          # Макс. итераций Monte Carlo
CALC_DEFAULT_ITERATIONS=1000       # Дефолт итераций

# Smart Binding
CALC_GRACE_PERIOD_DAYS=7           # Grace Period (дни)
CALC_DELETE_AFTER_DAYS=30          # Удаление после отвязки (дни)

# Broadcasting
CALC_BROADCASTING_ENABLED=true     # Включить WebSocket
CALC_PROGRESS_INTERVAL=5           # Частота прогресса (%)

# === Laravel Horizon (опционально) ===
# Для мониторинга очередей
# https://laravel.com/docs/horizon
HORIZON_PREFIX=horizon:
